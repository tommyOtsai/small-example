{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "Database package with Neon and Drizzle ORM",
  "main": "./dist/db.js",
  "types": "./dist/db.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/migrate.ts",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "drizzle-orm": "^0.44.3"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.9",
    "@types/ws": "^8.18.0",
    "bufferutil": "^4.0.9"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/db.d.ts",
      "default": "./dist/db.js"
    },
    "./users": {
      "types": "./dist/schema/users.schema.d.ts",
      "default": "./dist/schema/users.schema.js"
    }
  }
}
