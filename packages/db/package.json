{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "Database package with Neon and Drizzle ORM",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/migrate.ts",
    "dev": "tsx src/example.ts",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0"
  },
  "devDependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "dotenv": "^16.0.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/db.d.ts",
      "default": "./dist/db.js"
    },
    "./users": {
      "types": "./dist/schema/users.schema.d.ts",
      "default": "./dist/schema/users.schema.js"
    }
  }
}
